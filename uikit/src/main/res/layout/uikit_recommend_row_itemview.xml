<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:layout_width="@dimen/recommend_row_item_width"
    android:layout_height="@dimen/recommend_row_item_height"
    android:duplicateParentState="true">

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:paddingBottom="25dp"
        android:textColor="@color/recommend_row_normal_color"
        android:textSize="@dimen/recommend_row_item_title_textsize" />

</FrameLayout>