<resources>
	<style name="HomeTheme" parent="android:Theme.NoTitleBar">
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:colorBackgroundCacheHint">@null</item>
		<item name="android:windowShowWallpaper">true</item>
		<item name="android:windowNoTitle">true</item>
	</style>
	<style name="Toolbar" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
		<item name="android:layout_marginBottom">1dp</item>
		<item name="android:drawablePadding">32dp</item>
		<item name="android:textColor">@color/text_color</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="CategoryHeader" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
		<item name="android:textColor">@color/text_color</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="Preference" parent="@android:style/Widget.TextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">16dp</item>
		<item name="android:textColor">@color/text_color_preference</item>
		<item name="android:lineSpacingExtra">3dp</item>
	</style>
	<style name="PreferenceWithSeparator" parent="Preference">
		<item name="android:background">@drawable/bottom_border</item>
	</style>
	<style name="Button" parent="@android:style/Widget.Button">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/button_raised</item>
		<item name="android:padding">16dp</item>
		<item name="android:textColor">@color/button_text</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="LightDialog" parent="android:Theme.Light"/>

	<declare-styleable name="PT">
		<attr name="text" format="string" />
		<attr name="drawable" format="reference" />
		<attr name="drawable_focused" format="reference" />
	</declare-styleable>

	<declare-styleable name="MarqueeViewStyle">
		<attr name="mvInterval" format="integer|reference"/>
		<attr name="mvAnimDuration" format="integer|reference"/>
		<attr name="mvTextSize" format="dimension|reference"/>
		<attr name="mvTextColor" format="color|reference"/>
		<attr name="mvSingleLine" format="boolean"/>
		<attr name="mvFont" format="reference"/>
		<attr name="mvGravity">
			<enum name="left" value="0"/>
			<enum name="center" value="1"/>
			<enum name="right" value="2"/>
		</attr>
		<attr name="mvDirection">
			<enum name="bottom_to_top" value="0"/>
			<enum name="top_to_bottom" value="1"/>
			<enum name="right_to_left" value="2"/>
			<enum name="left_to_right" value="3"/>
		</attr>
	</declare-styleable>

	<declare-styleable name="EditTextFocusShift">
		<attr name="focusShiftRight" format="boolean" />
		<attr name="focusShiftLeft" format="boolean" />
		<attr name="focusShiftUp" format="boolean" />
		<attr name="focusShiftDown" format="boolean" />
	</declare-styleable>

	<!-- region widget settings theme-->
	<style name="theme_widget_settings_header">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">@dimen/theme_header_height</item>
		<item name="android:background">@drawable/theme_editor_background</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#ffffff</item>
	</style>

	<style name="style_note_font_size_button">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">sans-serif</item>
	</style>

	<style name="style_note_editor">
		<item name="colorAccent">#00ffff</item>
	</style>

	<style name="style_widget_button">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">13dp</item>
	</style>
	<!-- endregion meeting room settings-->


	<style name="Theme.WidgetSetting" parent="Theme.AppCompat.DayNight.NoActionBar">
		<!-- 視窗完全透明 -->
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
		<item name="android:windowDrawsSystemBarBackgrounds">true</item>
		<item name="android:statusBarColor">@android:color/transparent</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>

		<!-- 無標題/ActionBar -->
		<item name="windowNoTitle">true</item>
		<item name="windowActionBar">false</item>

		<!-- 不要自動加任何覆蓋/邊框 -->
		<item name="android:windowFrame">@null</item>
		<item name="android:windowContentOverlay">@null</item>

		<!-- 若要完全透明，關掉背景變暗；要半透明遮罩就改回 true 並自訂 dimAmount -->
		<item name="android:backgroundDimEnabled">false</item>
	</style>



</resources>
